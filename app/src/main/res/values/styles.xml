<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="@style/Theme.AppCompat.Light">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/list_background_pressed</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_light</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/list_background</item>
        <item name="android:windowBackground">@color/drawer_item_color</item>
        <item name="android:listViewStyle">@color/drawer_item_color</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat">
         <item name="colorPrimary">@color/list_divider</item>
         <item name="colorPrimaryDark">@color/primary_dark</item>
         <item name="colorAccent">@color/drawer_item_color</item>
        <item name="android:windowBackground">@color/echo</item>
        <item name="android:listViewStyle">@color/echo</item>
     </style>

   <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>

